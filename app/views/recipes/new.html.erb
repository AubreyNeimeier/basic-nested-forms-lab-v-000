<%= render 'form', recipe: @recipe %>

<%= form_for @recipe do |f| %>
  <%= f.label :title %>
  <%= f.text_field :recipe_title %> <br>

  <%= f.fields_for :recipes do |r| %>
  <!-- ingredient 0 -->
    <%= r.label :name %>
    <%= r.text_field :0_name %><br>

    <%= r.label :quantity %>
    <%= r.text_field :0_quantity %>
<!-- ingredient 1 -->
    <%= r.label :name %>
    <%= r.text_field :1_name %><br>

    <%= r.label :quantity %>
    <%= r.text_field :1_quantity %>
  <% end %>
  <%= f.submit %>
<% end %>
